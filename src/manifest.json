{
  "manifest_version": 3,
  "name": "Tzakkar",
  "description": "A reminder for Muslims to ask for Allah's forgiveness.",
  "version": "0.1.1",
  "version_name": "0.1.1 Alpha",
  "author": "mohamednow25@gmail.com",
  "minimum_chrome_version": "47",
  "incognito": "not_allowed",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "imgs/icons/Green/16.png",
    "32": "imgs/icons/Green/32.png",
    "48": "imgs/icons/Green/48.png",
    "128": "imgs/icons/Green/128.png"
  },
  "action": {
    "default_icon": {
      "16": "imgs/icons/Green/16.png",
      "32": "imgs/icons/Green/32.png",
      "48": "imgs/icons/Green/48.png",
      "128": "imgs/icons/Green/128.png"
    },
    "default_popup": "popup.html"
  }
}
