{
  "manifest_version": 3,
  "name": "Tzakkar",
  "description": "A reminder for Muslims to ask for Allah's forgiveness.",
  "version": "1.0.0",
  "version_name": "1.0.0 Alpha",
  "author": "mohamednow25@gmail.com",
  "minimum_chrome_version": "47",
  "incognito": "not_allowed",
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "imgs/icons/Green/16.png",
    "32": "imgs/icons/Green/32.png",
    "48": "imgs/icons/Green/48.png",
    "128": "imgs/icons/Green/128.png"
  },
  "action": {
    "default_icon": {
      "16": "imgs/icons/Green/16.png",
      "32": "imgs/icons/Green/32.png",
      "48": "imgs/icons/Green/48.png",
      "128": "imgs/icons/Green/128.png"
    },
    "default_popup": "popup.html"
  }
}
