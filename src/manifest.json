{
  "manifest_version": 3,
  "name": "Tazakr",
  "description": "A reminder for Muslims to ask for Allah's forgiveness.",
  "version": "0.0.0.3",
  "version_name": "0.0.0.3 Alpha",
  "author": "mohamednow25@gmail.com",
  "minimum_chrome_version": "47",
  "incognito": "not_allowed",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/Green16.png",
    "32": "icons/Green32.png",
    "48": "icons/Green48.png",
    "128": "icons/Green128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/Green16.png",
      "32": "icons/Green32.png",
      "48": "icons/Green48.png",
      "128": "icons/Green128.png"
    }
  }
}
